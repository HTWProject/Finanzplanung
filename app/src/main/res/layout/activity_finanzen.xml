<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.htw.finanzplanung.ActivityFinanzen"
    android:background="#000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/Datum"
                android:layout_weight="0.29"
                android:hint="Datum"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/Was"
                android:inputType="text"
                android:layout_weight="0.81"
                android:hint="Was"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

            <EditText
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/Betrag"
                android:layout_weight="0.00"
                android:hint="€"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bt_addBetrag"
                android:id="@+id/bt_addBetrag" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <EditText
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/DatumVon"
                android:layout_weight="0.40"
                android:hint="von"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

            <EditText
                android:layout_width="47dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/DatumBis"
                android:layout_weight="0.45"
                android:hint="bis"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/gesamtbetrag"
                android:id="@+id/textView12"
                android:layout_weight="0.22"
                android:textColor="#808080"/>

            <EditText
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/gesamtBetrag"
                android:hint="€"
                android:textColorHint="#808080"
                android:textColor="#808080"
                android:backgroundTint="#808080"/>

        </LinearLayout>

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/expandableListView"
            android:textColor="#808080"/>

    </LinearLayout>
</RelativeLayout>
